<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".internetcheck.InternetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.6">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="50dp"
            android:src="@drawable/nointervire"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="0.4">
        <TextView
            android:id="@+id/errortv"
            android:layout_width="match_parent"
            android:text=""
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:text="No panic, the fix is on the way."
            android:textColor="#888888"
            android:layout_height="wrap_content"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="try again later or turn on notifications"
            android:textColor="#888888"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="so we could notify you when it's done."
            android:textColor="#888888"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnnotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOTIFY ME"
            android:background="#0c6ef9"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"/>






    </LinearLayout>
</LinearLayout>